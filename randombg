#!/bin/bash
set -euo pipefail

findBackground() {

	IMG_TYPE='.svg|.png|.jpg|.jpeg'
	#	IMG_PATH='/usr/share/backgrounds/gnome'
	IMG_PATH="${HOME}/Pictures/backgrounds/"

	RANDOM_BG=$(
		find -O3 -L "${IMG_PATH}" -maxdepth 99 \
			| grep -E "${IMG_TYPE}" \
			| shuf \
			| head -n1
	)

}

setBackground() {

	#	feh --no-xinerama --bg-fill "${RANDOM_BG}" ## span
	feh --bg-fill "${RANDOM_BG}"

}

main() {
	findBackground
	setBackground
}

main
