#!/bin/bash
## Grep for IP in a given file/stdin

if [[ -n "${1}" ]]; then
	INPUT="${1}"
else
	INPUT=$(</dev/stdin)
fi

echo "${INPUT}"|grep -Eo "(25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)\.(25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)\.(25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)\.(25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)"
