#!/bin/bash
set -euo pipefail

declare -gri floating_point=3

#setGovernorIcon(){
#	case $scaling_governor in
#		'schedutil')	scaling_governor_icon='ğŸ’¡';;
#		'userspace')	scaling_governor_icon='ğŸ·';;
#		'performance')	scaling_governor_icon='â›½ï¸';;
#		'powersave')	scaling_governor_icon='ğŸŒ±';;
#		'ondemand')		scaling_governor_icon='ğŸ¢';;
#		'conservative')	scaling_governor_icon='ğŸ§˜';;
#		*)				scaling_governor_icon='â“';;
#	esac
#}

showDriverGovernor() {
	## read from cpu0, assuming all core have the same governor.
	declare -gr cpu_base_path="/sys/devices/system/cpu"
	declare -r cpu_device_path="$cpu_base_path/cpu0/cpufreq"

	read -r scaling_max_freq<$cpu_device_path/scaling_max_freq
	read -r scaling_governor<$cpu_device_path/scaling_governor
	read -r scaling_driver<$cpu_device_path/scaling_driver

#	setGovernorIcon
#	echo -e " \e[4m\e[1m$scaling_driver\e[0m: $scaling_governor $scaling_governor_icon\e[0m"

	echo -e " \e[4m\e[1m$scaling_driver\e[0m: $scaling_governor\e[0m"
}

setRatioColorIcon() {
	local _scaled_ratio=$1

	case 1 in
		$((_scaled_ratio > 101)) )	color='\e[35m'; icon='ğŸ¦„';;
		$((_scaled_ratio >= 80)) )	color='\e[31m'; icon='ğŸ†';;
		$((_scaled_ratio >= 50)) )	color='\e[33m'; icon='ğŸ‡';;
		$((_scaled_ratio >= 40)) )	color='\e[32m'; icon='ğŸ¢';;
		$((_scaled_ratio >= 30)) )	color='\e[37m'; icon='ğŸŒ';;
		*)							color='\e[38m'; icon='â“';;
	esac

}


showCpuFreq() {
	local core_num; core_num=$(nproc)
	local _core_num; _core_num=$((core_num - 1))

	for ((core=0; core<=_core_num; core++)); do

		local cpu_device_path; cpu_device_path="$cpu_base_path/cpu$core/cpufreq"
		read -r scaling_cur_freq<$cpu_device_path/scaling_cur_freq
		read -r scaling_max_freq<$cpu_device_path/scaling_max_freq

		local freq_ghz; freq_ghz=$(bc <<< "scale=$floating_point; $scaling_cur_freq / 1000000")
		local scaling_ratio; scaling_ratio=$(bc <<< "scale=$floating_point; $scaling_cur_freq / $scaling_max_freq")

		# Add leading 0 if <1
		[[ "${scaling_ratio:0:1}" == '.' ]] && scaling_ratio="0$scaling_ratio"

		local scaled_ratio; scaled_ratio=$(bc <<< "$scaling_ratio * 100")
		local _scaled_ratio; _scaled_ratio=$(cut -d '.' -f 1 <<< "$scaled_ratio")

		setRatioColorIcon "$_scaled_ratio"

		local _core; _core=$((core + 1))

#		echo -e " Â» core$_core:$color $freq_ghz GHz \e[2m($scaling_ratio) $icon\e[0m"
		echo -e " Â» core$_core:$color $freq_ghz\e[0m GHz \e[2m($scaling_ratio)\e[0m"

	done
}

main() {
	showDriverGovernor
	showCpuFreq
}

main
